                <img src="{{ product.media[7] | image_url }}">
              </a>
              {% assign filename = product.media[7] | image_url | split: '-' | last | split: '.' | first | replace: '_', ' ' %}
              <span class="look-details__item-title">{{ filename }}</span>
            </div> 
          </div>          
          <div class="look-details__block-column">
            <div class="look-details__item">
              <a href="{{ product.media[4].alt }}">
                <img src="{{ product.media[4] | image_url }}">
